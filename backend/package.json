{
  "name": "reloop-backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -n api,ponder -c blue,green \"bun --hot src/index.ts\" \"ponder dev\"",
    "dev:api": "bun --hot src/index.ts",
    "dev:ponder": "ponder dev",
    "start": "concurrently -n api,ponder -c blue,green \"bun src/index.ts\" \"ponder start\"",
    "start:api": "bun src/index.ts",
    "start:ponder": "ponder start",
    "codegen": "ponder codegen",
    "test": "bun test"
  },
  "dependencies": {
    "@ponder/core": "^0.7.0",
    "hono": "^4.11.4",
    "pinata-web3": "^0.5.4",
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "concurrently": "^9.1.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
